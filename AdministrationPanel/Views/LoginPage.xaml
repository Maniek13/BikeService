<Page
    x:Class="ToDoApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Frame>
        <Grid UseLayoutRounding="True">
            <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBox 
            x:Name="loginInput"
                        Header="Wpisz login:" PlaceholderText="login"  Width="NaN" Height="60"/>
                <TextBox 
            x:Name="paswordInput"
                        Header="Wpisz hasło:" PlaceholderText="hasło"  Width="NaN" Height="60" Margin="0,10,0,0"/>
                <Button Click="LogIn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,10,0,0" >Zaloguj</Button>
                <TextBlock x:Name="errorField" Foreground="#FFF10C0C" HorizontalAlignment="Center" Margin="0,5,0,-1" />
            </StackPanel>
        </Grid>
    </Frame>
</Page>
